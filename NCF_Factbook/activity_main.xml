<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"

    tools:context="com.example.ywils.ncffactbook.MainActivity">

    <ImageView
        android:id="@+id/ncf_img"
        android:src="@drawable/ncf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        android:layout_marginTop="-5dip"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New College of Florida"
        android:textSize="25sp"
        android:background="#00539b"
        android:textColor="@android:color/white"
        android:fontFamily="serif"
        android:id="@+id/name"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:paddingBottom="8dp"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5800 Bay Shore Rd \nSarasota, FL 34243 "
            android:paddingTop="8dp"
            android:paddingStart="4dp"
            android:paddingLeft="4dp"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/address"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/facts"
        android:text=" Student - Faculty Ratio: 10:1"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:paddingTop="4dp"
        android:paddingBottom="6dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Degree Awarded: Bachelor of Arts"
        android:id="@+id/degree"
        android:paddingBottom="6dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuition: $6,916 (resident); $29,944 (non-resident)"
        android:id="@+id/tuition"
        android:paddingBottom="6dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room &amp; Board: $8,932"
        android:id="@+id/randb"
        android:textColor="@android:color/black"
        android:paddingBottom="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/fb"
            android:id="@+id/fblink"
             />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/insta"
            android:id="@+id/insta"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/twitter"
            android:id="@+id/twitter"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/youtube"
            android:id="@+id/youtube"
            />

    </LinearLayout>

</LinearLayout>
